<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_5sdp"
    android:background="@color/colorBlack"
    android:layout_marginBottom="@dimen/_5sdp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/colorIconBackground">
        <ImageView
            android:id="@+id/img_Avatar_Video_Near"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_play_circle_outline_black_40dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:background="@color/colorCategoryName">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBlack"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp">

            <TextView
                android:id="@+id/tv_Title_Video_Near"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textStyle="bold"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp">
                <TextView
                    android:id="@+id/tv_TimeCreate_Video_near"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_favorite_black_40dp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>