<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:id="@+id/vv_Video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_TimePlay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorText"
                android:text="00:00"
                android:textSize="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>
            <SeekBar
                android:id="@+id/seek_Video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_50sdp" />
            <TextView
                android:id="@+id/tv_TimeMax"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorText"
                android:text="00:00"
                android:textSize="@dimen/_7sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_25sdp"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp">
            <ImageView
                android:id="@+id/img_FullScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fullscreen_exit_black_24dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/control"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_80sdp"
            android:layout_marginRight="@dimen/_80sdp">

            <ImageView
                android:id="@+id/play_ctr"
                android:scaleType="fitXY"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_play_circle_outline_black_40dp" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/pause_ctr"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_pause_circle_outline_black_40dp" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/back_ctr"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_skip_previous_black_40dp" />

            <ImageView
                android:id="@+id/next_ctr"
                android:scaleType="fitXY"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_skip_next_black_40dp" />
        </RelativeLayout><RelativeLayout
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ProgressBar
            android:id="@+id/progres_loadVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>